@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <script src="javascript.js" defer></script>
    <script src="loginvalidation.js" defer></script>
    <link rel="stylesheet" type="text/css" href="~/login.css">

</head>

<body>
    <section class="control">
        <header class="navi">
            <footer>
                <h1 class="ender"> Copyright. Aras Butrimanskas - N0844425 NTU </h1>
            </footer>
            <a href="index.html"><img src="~/logosmall.png" alt="driftgineers logo"></a>
            <ul>
                <li><a asp-page="index">Home</a></li>
                <li><a asp-page="shop">Shop</a></li>
                <li><a class="active" href="#">Login</a></li>
                <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            </ul>
        </header>
    </section>
    <div class="wrapper">

        <form name="myform" method="post" id="account">
            <h2>Log in</h2>

            <div class="wrapper">
                <input type="text" name="email" placeholder="Email" id="email" asp-for="Input.Email">

                <input type="password" name="password" placeholder="Password" id="password" asp-for="Input.Password">

                <input type="submit" name="submit" placeholder="Login" value="Login" id="submit" onclick="validate();">

                <p class="noacc">Haven't registered yet? <a href="register.html">Sign Up Now!</a></p>
                <div class="validationsumerrors" asp-validation-summary="All"></div>
            </div>
        </form>
    </div>






</body>




</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
