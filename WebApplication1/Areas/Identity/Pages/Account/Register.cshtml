@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <script src="registervalidation.js" defer></script>
    <script src="javascript.js" defer></script>
    <link rel="stylesheet" type="text/css" href="~/login.css">



</head>

<body>
    <div class="container1">
        <section class="control">
            <header class="navi">
                <footer>
                    <h1 class="ender"> Copyright. Aras Butrimanskas - N0844425 NTU </h1>
                </footer>
                <a href="index.html"><img src="~/logosmall.png" alt="driftgineers logo"></a>
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li><a href="shop.html">Shop</a></li>
                    <li><a href="login.html">Login</a></li>
                    <li><a class="active" href="#">Register</a></li>
                </ul>
            </header>
        </section>

        <div class="wrapper">

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <h2>Register</h2>


                <div class="wrapper2">
                    <input class="namesurname" type="text" name="name" placeholder="Name" id="name" asp-for="Input.FirstName">

                    <input class="namesurname" type="text" name="surname" placeholder="Surname" id="surname" asp-for="Input.LastName">

                </div>
                <div class="wrapper">
                    <input type="text" name="email" placeholder="Email" id="email" asp-for="Input.Email">


                    <input type="password" name="password" placeholder="Password" id="password" asp-for="Input.Password">


                    <input type="submit" name="submit" placeholder="Login" value="Submit" id="submit"
                           onclick="validate();">

                    <p class="noacc">Already Registered? <a href="login.html">Log in!</a></p>
                    <div class="validationsumerrors" asp-validation-summary="All"></div>
                </div>
            </form>
        </div>
    </div>





</body>




</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
